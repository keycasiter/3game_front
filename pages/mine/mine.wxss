.container {
  min-height: 100vh;
  background: linear-gradient(to bottom right, #fff8e1, #ffecb3, #ffe082);
  padding: 30rpx;
  box-sizing: border-box;
}

/* 用户信息区域 */
.user-info {
  width: 100%;
  background-color: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  padding: 30rpx;
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid #ffd54f;
  margin-right: 20rpx;
}

.user-detail {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #795548;
}

.uid {
  font-size: 24rpx;
  color: #8d6e63;
  margin-top: 4rpx;
}

.level-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  background: linear-gradient(to right, #ffd54f, #ffca28);
  color: #795548;
  border-radius: 20rpx;
  margin-right: 10rpx;
}

/* 数据统计区域 */
.stats-bar {
  background-color: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  padding: 30rpx;
  margin-top: 20rpx;
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #795548;
}

/* 对战记录按钮样式 */
.record-btn {
  background: linear-gradient(135deg, #c87d2f, #e8a15d);
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  border: none;
  display: flex;
  align-items: center;
  gap: 8rpx;
  box-shadow: 0 4rpx 8rpx rgba(200, 125, 47, 0.2);
  position: relative;
  overflow: hidden;
}

.record-btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, rgba(255,255,255,0.2), transparent);
  border-radius: 30rpx;
}

.record-btn text {
  font-size: 26rpx;
  color: #fff;
  font-weight: 500;
  text-shadow: 0 1rpx 2rpx rgba(0,0,0,0.1);
}

/* 添加hover效果 */
.record-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 4rpx rgba(200, 125, 47, 0.1);
  transition: all 0.2s;
}

.stats-row {
  display: flex;
  justify-content: space-around;
  background: linear-gradient(to bottom right, #fff8e1, #ffecb3);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-item .number {
  font-size: 40rpx;
  font-weight: bold;
  color: #795548;
}

.stat-item .label {
  font-size: 24rpx;
  color: #8d6e63;
  margin-top: 4rpx;
}

/* 功能菜单 */
.menu-list {
  background: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f6f7;
  position: relative;
}

.menu-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
  color: #c87d2f;
}

.menu-text {
  font-size: 28rpx;
  color: #c87d2f;
}

/* 右侧箭头图标 */
.arrow {
  width: 32rpx;
  height: 32rpx;
  margin-left: auto; /* 将箭头推到右侧 */
  opacity: 0.6;
}

/* 移除最后一个菜单项的底部边框 */
.menu-item:last-child {
  border-bottom: none;
}

/* 授权弹窗 */
.auth-modal {
  background: rgba(0, 0, 0, 0.6);
}

.auth-content {
  background-color: white;
  border-radius: 20rpx;
