.container {
  min-height: 100vh;
  background: #f5e6d3;
  padding: 20rpx;
  box-sizing: border-box;
}

.search-bar {
  padding: 20rpx;
  background: linear-gradient(145deg, rgba(255, 250, 245, 0.95), rgba(252, 243, 232, 0.95));
  border: 1px solid rgba(181, 145, 85, 0.6);
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  box-shadow: 
    inset 0 1rpx 2rpx rgba(255, 255, 255, 0.8),
    0 2rpx 4rpx rgba(139, 104, 49, 0.15);
}

.search-input {
  height: 64rpx;
  padding: 0 20rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 32rpx;
  border: 1px solid rgba(181, 145, 85, 0.4);
  color: #8b6831;
}

.search-input::placeholder {
  color: rgba(139, 104, 49, 0.5);
}

.general-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  padding: 10rpx;
}

.general-item {
  aspect-ratio: 1;
  background: linear-gradient(145deg, rgba(255, 250, 245, 0.95), rgba(252, 243, 232, 0.95));
  border-radius: 6rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx;
  position: relative;
  border: 1px solid rgba(181, 145, 85, 0.6);
  transition: transform 0.2s;
  width: 100%;
  box-sizing: border-box;
  box-shadow: 
    inset 0 1rpx 2rpx rgba(255, 255, 255, 0.8),
    0 2rpx 4rpx rgba(139, 104, 49, 0.15);
}

.general-item:active {
  transform: scale(0.95);
}

.general-item.selected {
  background: linear-gradient(135deg, #b59155, #8b6831);
}

.general-item.selected .general-name {
  color: #fff;
}

.general-avatar {
  width: 80%;
  height: auto;
  aspect-ratio: 1;
  border-radius: 6rpx;
  border: 2rpx solid rgba(181, 145, 85, 0.6);
}

.general-name {
  font-size: 24rpx;
  color: #8b6831;
  text-align: center;
  width: 100%;
  margin-top: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-weight: bold;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 20rpx;
  color: #8b6831;
  font-size: 24rpx;
}

/* 无数据提示 */
.no-data {
  text-align: center;
  padding: 40rpx;
  color: #8b6831;
  font-size: 28rpx;
}

/* 搜索框 */
.search-box {
  background: linear-gradient(145deg, rgba(255, 250, 245, 0.95), rgba(252, 243, 232, 0.95));
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  border: 1px solid rgba(181, 145, 85, 0.6);
  box-shadow: 
    inset 0 1rpx 2rpx rgba(255, 255, 255, 0.8),
    0 2rpx 4rpx rgba(139, 104, 49, 0.15);
}

.search-box input {
  font-size: 28rpx;
  color: #8b6831;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 32rpx;
  padding: 10rpx 20rpx;
  border: 1px solid rgba(181, 145, 85, 0.4);
}

.search-box input::placeholder {
  color: rgba(139, 104, 49, 0.5);
}

/* 筛选标签 */
.filter-group {
  background: linear-gradient(145deg, rgba(255, 250, 245, 0.95), rgba(252, 243, 232, 0.95));
  border-radius: 10rpx;
  padding: 10rpx;
  margin-bottom: 30rpx;
  border: 1px solid rgba(181, 145, 85, 0.6);
  box-shadow: 
    inset 0 1rpx 2rpx rgba(255, 255, 255, 0.8),
    0 2rpx 4rpx rgba(139, 104, 49, 0.15);
}

.filter-row {
  display: flex;
  gap: 10rpx;
  margin-bottom: 10rpx;
}

.filter-row:last-child {
  margin-bottom: 0;
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 10rpx;
  font-size: 28rpx;
  color: #8b6831;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 6rpx;
  border: 1px solid rgba(181, 145, 85, 0.4);
  transition: all 0.3s ease;
}

.filter-item.selected {
  background: linear-gradient(135deg, #b59155, #8b6831);
  color: #fff;
  border-color: rgba(181, 145, 85, 0.8);
  box-shadow: inset 0 1rpx 4rpx rgba(0, 0, 0, 0.2);
} 