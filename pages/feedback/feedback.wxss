.container {
  min-height: 100vh;
  background: #2c2723;
  padding: 20rpx;
  box-sizing: border-box;
}

.feedback-form {
  background: #3a342f;
  border: 1px solid #d4b887;
  border-radius: 8rpx;
  padding: 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #d4b887;
  margin-bottom: 16rpx;
  display: block;
}

.type-list {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.type-item {
  flex: 1;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #2c2723;
  border: 1px solid rgba(212, 184, 135, 0.3);
  border-radius: 4rpx;
  color: #d4b887;
  font-size: 26rpx;
}

.type-item.active {
  background: #d4b887;
  color: #2c2723;
  border-color: #d4b887;
}

.feedback-textarea {
  width: 100%;
  height: 300rpx;
  background: #2c2723;
  border: 1px solid rgba(212, 184, 135, 0.3);
  border-radius: 4rpx;
  padding: 20rpx;
  box-sizing: border-box;
  color: #d4b887;
  font-size: 26rpx;
  margin-bottom: 10rpx;
}

.word-count {
  font-size: 24rpx;
  color: #d4b887;
  opacity: 0.8;
  text-align: right;
  display: block;
  margin-bottom: 30rpx;
}

.contact-field {
  width: 100%;
  height: 80rpx;
  background: #2c2723;
  border: 1px solid rgba(212, 184, 135, 0.3);
  border-radius: 4rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #d4b887;
  font-size: 26rpx;
  margin-bottom: 40rpx;
}

.submit-btn {
  background: #d4b887;
  color: #2c2723;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 8rpx;
  width: 100%;
  text-align: center;
  font-weight: bold;
}

.submit-btn[disabled] {
  opacity: 0.5;
  background: rgba(212, 184, 135, 0.5);
} 