.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #2c2723;
  padding: 40rpx;
  box-sizing: border-box;
  font-family: "隶书", "LiSu", serif;
}

/* 顶部背景 */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
  margin-bottom: 80rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  color: #d4b887;
  font-weight: bold;
}

/* 用户信息区域 */
.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  border: 4rpx solid #d4b887;
  margin-bottom: 20rpx;
}

.nickname {
  font-size: 32rpx;
  color: #d4b887;
}

/* 登录按钮区域 */
.login-area {
  width: 100%;
  margin-bottom: 60rpx;
}

.login-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #07c160;
  color: #ffffff;
  border-radius: 44rpx;
  padding: 20rpx 0;
  margin: 0 40rpx;
}

.wechat-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.start-btn {
  background: #d4b887;
  color: #2c2723;
  border-radius: 44rpx;
  padding: 20rpx 0;
  margin: 0 40rpx;
  font-weight: bold;
}

/* 底部说明 */
.footer {
  position: fixed;
  bottom: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tips {
  font-size: 24rpx;
  color: rgba(212, 184, 135, 0.8);
}

.link {
  font-size: 24rpx;
  color: #d4b887;
  margin: 0 8rpx;
  text-decoration: underline;
}

/* 按钮点击效果 */
.login-btn:active,
.start-btn:active {
  opacity: 0.8;
}

/* 所有按钮使用统一字体 */
button {
  font-family: "隶书", "LiSu", serif;
} 