.container {
  min-height: 100vh;
  background: #f5e6d3;
  padding: 30rpx;
  box-sizing: border-box;
}

.join-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  margin: 40rpx 0;
}

.join-tip {
  font-size: 28rpx;
  color: #8b6831;
  opacity: 0.8;
}

.join-btn {
  width: 80%;
  height: 88rpx;
  background: linear-gradient(145deg, rgba(255, 250, 245, 0.95), rgba(252, 243, 232, 0.95));
  border-radius: 44rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #8b6831;
  position: relative;
  padding: 0;
  margin: 0 auto;
  min-width: 300rpx;
  border: 1px solid rgba(181, 145, 85, 0.6);
  box-shadow: 
    inset 0 1rpx 2rpx rgba(255, 255, 255, 0.8),
    0 2rpx 4rpx rgba(139, 104, 49, 0.15);
}

.join-btn .cell-icon {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 48rpx;
  height: 48rpx;
}

.join-btn .cell-text {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-size: 28rpx;
  color: #8b6831;
  font-weight: bold;
}

.bottom-tips {
  text-align: center;
  font-size: 24rpx;
  color: #8b6831;
  opacity: 0.6;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
} 